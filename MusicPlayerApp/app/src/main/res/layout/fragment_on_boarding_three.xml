<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboarding3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.OnBoarding.OnBoardingThreeFragment">


    <TextView
        android:layout_width="277dp"
        android:layout_height="69dp"
        android:layout_marginStart="35dp"
        android:fontFamily="@font/montserrat"
        android:lineHeight="22dp"
        android:text="Sound is a shape that can be told more than words"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.339" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="253dp"
        android:layout_height="39dp"
        android:layout_marginStart="35dp"
        android:fontFamily="@font/roboto_medium"
        android:lineHeight="38dp"
        android:text="Experience"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="205dp"
        android:layout_height="37dp"
        android:layout_marginStart="35dp"
        android:fontFamily="@font/roboto_medium"
        android:lineHeight="38dp"
        android:text="Try a New Sound"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.701" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="60dp"
        android:layout_height="10dp"
        android:layout_marginStart="35dp"
        android:src="@drawable/slider3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.693" />

    <Button
        android:id="@+id/btn_get_started"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_get_started"
        android:fontFamily="@font/roboto_medium"
        android:letterSpacing="0.05"
        android:text="Get started!"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16.5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.952"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>