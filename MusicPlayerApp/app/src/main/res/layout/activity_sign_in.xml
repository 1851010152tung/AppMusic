<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn"
    android:background="@color/white">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="464dp"
        android:layout_height="426dp"
        android:src="@drawable/bg_header_signin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="22dp"
        android:layout_height="28dp"
        android:layout_marginStart="35dp"
        android:src="@drawable/icon_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />

    <ImageView
        android:layout_width="151dp"
        android:layout_height="77dp"
        android:layout_marginEnd="35dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.020" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="196dp"
        android:layout_height="112dp"
        android:layout_marginStart="35dp"
        android:fontFamily="@font/nunito_extrabold"
        android:lineHeight="38dp"
        android:text="Log into your account"
        android:textColor="@color/white"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.176" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.57">

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edt_sign_in"
            android:fontFamily="@font/roboto_medium"
            android:hint="Email"
            android:textColorHint="@color/brown_black"
            android:paddingLeft="25dp"
            android:textSize="16dp"
            app:hintEnabled="true"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edt_pass"
            android:password="true"
            app:hintEnabled="true"
            android:textColorHint="@color/brown_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edt_sign_in"
            android:fontFamily="@font/roboto_medium"
            android:hint="Password"
            android:paddingLeft="25dp"
            android:textSize="16dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
          />

    </LinearLayout>
    <TextView
        android:layout_width="205dp"
        android:layout_height="37dp"
        android:layout_marginStart="35dp"
        android:fontFamily="@font/nunito_bold"
        android:lineHeight="38dp"
        android:text="Welcome back!"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.429" />


    <TextView
        android:layout_width="205dp"
        android:layout_height="37dp"
        android:layout_marginStart="35dp"
        android:fontFamily="@font/nunito_extrabold"
        android:lineHeight="38dp"
        android:text="Sign In"
        android:textColor="@color/black"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.764" />

    <ImageView
        android:id="@+id/img_next"
        android:layout_width="65dp"
        android:layout_height="66dp"
        android:layout_marginEnd="35dp"
        android:src="@drawable/btn_next_signin_signup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.769" />

    <ImageView
        android:id="@+id/btn_sign_up2"
        android:layout_width="77dp"
        android:layout_height="29dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/btn_signup_insignin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.920" />

    <ImageView
        android:id="@+id/btn_forgotPass"
        android:layout_width="160dp"
        android:layout_height="21dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="35dp"
        android:src="@drawable/btn_forgot_pass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.915" />


</androidx.constraintlayout.widget.ConstraintLayout>