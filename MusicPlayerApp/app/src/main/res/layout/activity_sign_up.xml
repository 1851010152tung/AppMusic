<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_signup"
    tools:context=".SignUp">



    <ImageView
        android:id="@+id/img_back"
        android:layout_width="22dp"
        android:layout_height="28dp"
        android:layout_marginStart="35dp"
        android:src="@drawable/icon_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />

    <ImageView
        android:layout_width="151dp"
        android:layout_height="77dp"
        android:layout_marginEnd="35dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.020" />


    <TextView
        android:layout_width="188dp"
        android:layout_height="57dp"
        android:layout_marginStart="35dp"
        android:fontFamily="@font/nunito_extrabold"
        android:lineHeight="38dp"
        android:text="Create"
        android:textColor="@color/white"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.148" />

    <TextView
        android:layout_width="269dp"
        android:layout_height="61dp"
        android:layout_marginStart="35dp"
        android:fontFamily="@font/nunito_extrabold"
        android:lineHeight="38dp"
        android:text="your account"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.204" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.53"
        >
        <EditText
            android:id="@+id/edt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edt_sign_up"
            android:fontFamily="@font/roboto_medium"
            android:hint="Username"
            android:textColorHint="@color/brown_black"
            android:textSize="16dp"
            android:paddingLeft="25dp"
            android:layout_marginBottom="14dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/brown_black"

            android:layout_marginBottom="14dp"
            android:background="@drawable/bg_edt_sign_up"
            android:fontFamily="@font/roboto_medium"
            android:hint="Email"
            android:paddingLeft="25dp"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edt_numberphone"
            android:layout_width="wrap_content"
            android:textColorHint="@color/brown_black"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:background="@drawable/bg_edt_sign_up"
            android:fontFamily="@font/roboto_medium"
            android:hint="Phone"
            android:paddingLeft="25dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:inputType="phone"
            android:digits="0123456789"
            android:maxLength="12" />

        <EditText
            android:id="@+id/edt_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/brown_black"

            android:background="@drawable/bg_edt_sign_up"
            android:fontFamily="@font/roboto_medium"
            android:hint="Password"
            android:paddingLeft="25dp"
            android:password="true"
            android:textColor="@color/black"
            android:textSize="16dp"
            />
    </LinearLayout>


    <TextView
        android:layout_width="205dp"
        android:layout_height="37dp"
        android:layout_marginStart="35dp"
        android:fontFamily="@font/nunito_extrabold"
        android:lineHeight="38dp"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_back"
        app:layout_constraintVertical_bias="0.806" />


    <ImageView
        android:id="@+id/btn_next"
        android:layout_width="65dp"
        android:layout_height="66dp"
        android:layout_marginEnd="35dp"
        android:src="@drawable/btn_next_signin_signup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.825" />

    <ImageView
        android:id="@+id/btn_backsignin"
        android:layout_width="73dp"
        android:layout_height="32dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="35dp"
        android:src="@drawable/btn_signin_insignup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_next"
        app:layout_constraintVertical_bias="0.685" />


</androidx.constraintlayout.widget.ConstraintLayout>