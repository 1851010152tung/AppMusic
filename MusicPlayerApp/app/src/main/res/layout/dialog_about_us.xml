<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/background_dialog_support"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="About Us"
                android:textSize="17sp"
                android:textColor="@color/light_blue"
                android:fontFamily="@font/montserrat_bold"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="13dp"
                android:textSize="13.5sp"
                android:text="The project is owned by"
                android:textColor="@color/brown_black"
                android:fontFamily="@font/montserrat_bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:textSize="14.5sp"
                android:text="Quang Tung and Truc Lam"
                android:textColor="@color/brown_black"
                android:fontFamily="@font/montserrat_bold"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btn_yeah"
            android:layout_marginTop="30dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Yeah, I see!"
            android:fontFamily="@font/montserrat_bold"
            android:background="@drawable/background_button_dialog_about_us"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textAllCaps="false"/>

    </LinearLayout>


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="275dp"
        android:src="@drawable/icon_cool_em_11"

        />


    <!--
